resource_name = "CharacterSelectMenu"
script/source = "extends Control


var _character_package = preload(\"res://Menus/UI/character.tscn\")
var _player_package = preload(\"res://Menus/UI/player.tscn\")

var character_panels = {}
var is_countdown_started = false

func _ready():
	$Button.text = \"Ready\"
	Server._on_update_serverside_player_data.connect(update_data)
	for character in Globals.CHARACTER_NAMES.keys():
		var character_instance = _character_package.instantiate()
		character_instance.get_node(\"Label\").text = Globals.CHARACTER_NAMES[character]
		character_instance.character = character
		#TODO Set character image
		$CharacterList.add_child(character_instance)
		character_panels[character] = character_instance


func update_data():
	for child in $PlayerList.get_children():
		$PlayerList.remove_child(child)
	for panel in character_panels:
		character_panels[panel].is_selected = false
	var is_all_ready = true
	for player in Server._player_data:
		var player_instance = _player_package.instantiate()
		player_instance.get_node(\"Label\").text = Server._player_data[player].player_name
		if Server._player_data[player].is_ready:
			player_instance.modulate = Color(0.1, 1, 0.1, 1)
		else:
			player_instance.modulate = Color(1, 0.1, 0.1, 1)
		if Server._player_data[player].selected_character != Globals.Character.NONE:
			character_panels[Server._player_data[player].selected_character].is_selected = true
		#TODO Selected Character
		$PlayerList.add_child(player_instance)
		if !Server._player_data[player].is_ready:
			is_all_ready = false
	if is_all_ready and !is_countdown_started and Server._player_data.size() > 1 and multiplayer.is_server():
		_on_countdown_start.rpc()
	if is_countdown_started and (!is_all_ready or Server._player_data.size() <= 1) and multiplayer.is_server():
		_on_countdown_cancel.rpc()

func _on_button_toggled(toggled_on):
	if !PlayerData.is_ready and \\
		PlayerData.selected_character == Globals.Character.NONE:
		Audio.play_sfx(\"UICancel\")
		$Button.button_pressed = false
		return
	PlayerData.is_ready = toggled_on
	if toggled_on:
		Audio.play_sfx(\"UISelect\")
	else:
		Audio.play_sfx(\"UICancel\")
	PlayerData._on_update_player_data.emit()

@rpc(\"authority\", \"call_local\", \"reliable\")
func _on_countdown_start():
	is_countdown_started = true
	# Probably handle this with its own scene prefab
	pass

@rpc(\"authority\", \"call_local\", \"reliable\")
func _on_countdown_cancel():
	is_countdown_started = false
	# Probably handle this with its own scene prefab
	pass
"

